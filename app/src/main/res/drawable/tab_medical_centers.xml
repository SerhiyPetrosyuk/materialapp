<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
            android:id="@+id/active_centers"
            android:state_checked="true"
            android:drawable="@drawable/avd_medical_center"/>

    <item
            android:id="@+id/not_active_centers"
            android:drawable="@drawable/ic_medical_centers"/>

    <transition
            android:fromId="@id/not_active_centers"
            android:toId="@id/active_centers"
            android:drawable="@drawable/avd_medical_center"/>

</animated-selector>