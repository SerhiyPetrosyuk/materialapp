<animated-vector
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:aapt="http://schemas.android.com/aapt"
        tools:ignore="NewApi">
    <aapt:attr name="android:drawable">
        <vector
                android:name="history"
                android:width="26dp"
                android:height="23dp"
                android:viewportWidth="26"
                android:viewportHeight="23">
            <group android:name="ic_history">
                <path
                        android:name="arrow"
                        android:pathData="M 9.14 9.158 L 5.068 13.229 L 1 9.158"
                        android:strokeColor="@color/colorAccent"
                        android:strokeLineCap="round"
                        android:strokeLineJoin="round"
                        android:strokeWidth="2"/>
                <path
                        android:name="circle"
                        android:pathData="M 5.101 12.71 C 5.008 12.162 4.96 11.598 4.96 11.022 C 4.96 5.488 9.447 1 14.981 1 C 20.515 1 25 5.488 25 11.022 C 25 16.556 20.512 21.043 14.978 21.043 C 12.406 21.043 10.059 20.072 8.286 18.48"
                        android:strokeColor="@color/colorAccent"
                        android:strokeLineCap="round"
                        android:strokeLineJoin="round"
                        android:strokeWidth="2"/>
                <group android:name="rotate_hours">
                    <path
                            android:name="hours"
                            android:pathData="M 14.954 6.139 L 14.954 11.350"
                            android:strokeColor="@color/colorAccent"
                            android:strokeLineCap="round"
                            android:strokeLineJoin="round"
                            android:strokeWidth="2"/>
                </group>
                <group android:name="rotate_mins">
                    <path
                            android:name="minutes"
                            android:strokeLineCap="round"
                            android:strokeLineJoin="round"
                            android:pathData="M 14.944 11.422 L 19.527 15.571"
                            android:strokeColor="@color/colorAccent"
                            android:strokeWidth="2"/>
                </group>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="rotate_hours">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                        android:propertyName="rotation"
                        android:duration="800"
                        android:valueFrom="0"
                        android:valueTo="360"
                        android:valueType="floatType"
                        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
                <objectAnimator
                        android:propertyName="pivotX"
                        android:duration="800"
                        android:valueFrom="14.954"
                        android:valueTo="14.954"
                        android:valueType="floatType"
                        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
                <objectAnimator
                        android:propertyName="pivotY"
                        android:duration="800"
                        android:valueFrom="11.350"
                        android:valueTo="11.350"
                        android:valueType="floatType"
                        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="rotate_mins">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                        android:propertyName="rotation"
                        android:duration="400"
                        android:valueFrom="0"
                        android:valueTo="360"
                        android:valueType="floatType"
                        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
                <objectAnimator
                        android:propertyName="pivotX"
                        android:duration="400"
                        android:valueFrom="14.944"
                        android:valueTo="14.944"
                        android:valueType="floatType"
                        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
                <objectAnimator
                        android:propertyName="pivotY"
                        android:duration="400"
                        android:valueFrom="11.422"
                        android:valueTo="11.422"
                        android:valueType="floatType"
                        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
